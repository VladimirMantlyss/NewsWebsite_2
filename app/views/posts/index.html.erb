<p style="color: green"><%= notice %></p>

<h1>Новини</h1>

<div id="News">
  <table class="table table table-striped table table-bordered table table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Заголовок</th>
      <th>Текст</th>
      <th>Тип</th>
      <th>Автор</th>
      <th>Дата</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.post_text %></td>
        <td><%= post.post_type.type %></td>
        <td><%= post.authors.first&.user&.name %></td>
        <td><%= post.created_at %></td>
        <td>
          <%= link_to "Редагувати", edit_post_path(post), class:"btn btn-secondary" %>
          <%= link_to "Детальніше", post_path(post), class:"btn btn-secondary", method: :delete, data: { confirm: "Are you sure?" } %>
          <%#= link_to "Show", patient %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

