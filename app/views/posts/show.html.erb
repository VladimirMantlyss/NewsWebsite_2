<p style="color: green"><%= notice %></p>


<div class="card">
  <div class="card-body">
    <h5 class="card-title">Заголовок: <%= @post.title %></h5>
    <p class="card-text">Тип поста: <%= @post.post_type.type %></p>
    <p class="card-text">Текст: <%= @post.post_text %></p>
    <p class="card-text">Дата: <%= @post.created_at %></p>
  </div>
</div>

<div>
  <%= button_to "Видалити", @post, method: :delete, class: "btn btn-primary" %>
  <br>
  <%= link_to "Редагувати", edit_post_path(@post), class: "btn btn-primary"%>
  <%= link_to "Повернутися", posts_path, class: "btn btn-primary" %>


</div>
